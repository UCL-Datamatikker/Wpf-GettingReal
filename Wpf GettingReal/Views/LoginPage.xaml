<Page x:Class="Wpf_GettingReal.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Wpf_GettingReal.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="LoginPage">

    <Grid>
        <Label x:Name="lLogin" Content="Login" HorizontalAlignment="Left" Margin="90,113,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="lEmail" Content="Email:" HorizontalAlignment="Left" Margin="90,155,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbLoginEmail" HorizontalAlignment="Left" Margin="161,159,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lPassword" Content="Password" HorizontalAlignment="Left" Margin="90,186,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbLoginPassword" HorizontalAlignment="Left" Margin="161,190,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="161,225,0,0" VerticalAlignment="Top" Width="120" Click="btnLogin_Click"/>

    </Grid>
</Page>
