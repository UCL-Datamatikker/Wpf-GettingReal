<Window x:Class="Wpf_GettingReal.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_GettingReal"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Margin="300,50,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" TextChanged="Name_TextChanged"/>
        <TextBox x:Name="CVR" HorizontalAlignment="Left" Margin="300,100,0,0" TextWrapping="Wrap" Text="CVR" VerticalAlignment="Top" Width="120" TextChanged="CVR_TextChanged"/>
        <TextBox x:Name="Adress" HorizontalAlignment="Left" Margin="300,150,0,0" TextWrapping="Wrap" Text="Adress" VerticalAlignment="Top" Width="120" TextChanged="Adress_TextChanged"/>
        <TextBox x:Name="Telephone" HorizontalAlignment="Left" Margin="300,200,0,0" TextWrapping="Wrap" Text="Telephone" VerticalAlignment="Top" Width="120" TextChanged="Telephone_TextChanged"/>
        <TextBox x:Name="E_Mail" HorizontalAlignment="Left" Margin="300,250,0,0" TextWrapping="Wrap" Text="E-Mail" VerticalAlignment="Top" Width="120" TextChanged="E_Mail_TextChanged"/>

    </Grid>
</Window>
